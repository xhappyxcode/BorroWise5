<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shayanetan.borrowise2">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_borrowise"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.BaseActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.ViewTransactionListActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ViewUserActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_view_user"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activities.AddTransactionActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_home"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.HistoryActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_history"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:clearTaskOnLaunch="true"
            android:label="Settings"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Activities.ViewUserProfileActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_view_user_profile"
            android:noHistory="true" />

        <receiver
            android:name=".Activities.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".Activities.SMSReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Activities.ViewTransactionActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_view_transaction"
            android:noHistory="true" />
        <activity
            android:name=".Activities.ViewHistoryActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_view_history"
            android:noHistory="true" />
        <activity android:name=".Activities.SearchActivity"></activity>
    </application>

</manifest>