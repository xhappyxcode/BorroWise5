<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_history"
    android:id="@+id/Hitem_container"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!-- for the image view below, if there is an actual image,
         remove the padding and scaleType="fitXY" -->
        <ImageView
            android:id="@+id/img_Hitem"
            android:layout_margin="3dp"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:background="@drawable/img"
            android:padding="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_item"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_Haccount_item"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Shayane Tan"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/list_username"/>
            <TextView
                android:id="@+id/tv_Hitemname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_margin="5dp"
                android:textSize="@dimen/card_amount_textsize"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="HawkeBag"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_Hstatusitem_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_label"
                android:layout_marginRight="5dp"
                android:text="@string/lbl_status" />
            <TextView
                android:id="@+id/tv_Hstatusitem_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_username"
                android:text="Returned"
                android:textColor="@color/accentLightBlueColor"
                android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_Hretdateitem_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_label"
                    android:layout_marginRight="5dp"
                    android:text="@string/lbl_retdate" />
                <TextView
                    android:id="@+id/tv_Hretdateitem_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_username"
                    android:textColor="@color/accentLightBlueColor"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="date" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <RatingBar
                    android:id="@+id/rb_Hratingitem"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:stepSize="0.5"
                    android:rating="5"
                    android:background="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>