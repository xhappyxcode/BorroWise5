<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ViewTransactionItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:background="@color/accentBlueColor"
        android:layout_marginBottom="10dp"
        android:id="@+id/card_view_camera">

        <ImageView
            android:id="@+id/img_view_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera_small"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_camera">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_view_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:tint="@color/text_primaryColor"
                    android:src="@drawable/ic_item"/>

                <TextView
                    android:id="@+id/tv_viewItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Item name"
                    android:textSize="@dimen/subheading_label"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_view_user_name"
                android:layout_below="@id/layout_view_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:tint="@color/text_primaryColor"
                    android:src="@drawable/ic_account"/>
                <TextView
                    android:id="@+id/view_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lent_to"/>
                <TextView
                    android:id="@+id/tv_viewPersonName"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="Person name"
                    android:textSize="@dimen/subheading_label">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_item_date_details"
                android:layout_below="@id/layout_view_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_view_item_startDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/navigation_icon_size"
                        android:layout_height="@dimen/navigation_icon_size"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/text_primaryColor"/>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/subheading_label"
                            android:text="Start Date"/>
                        <TextView
                            android:id="@+id/tv_view_item_startDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/caption_label"
                            android:text="today"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/dividerColor" />

                <LinearLayout
                    android:id="@+id/layout_view_item_endDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/navigation_icon_size"
                        android:layout_height="@dimen/navigation_icon_size"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/text_primaryColor"/>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/subheading_label"
                            android:text="@string/lbl_due"/>
                        <TextView
                            android:id="@+id/tv_view_item_endDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/caption_label"
                            android:text="today"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <!--
                add code for notification settings here
            -->
            <LinearLayout
                android:id="@+id/layout_notif_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/view_item_date_details" >

                <ImageView
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/text_primaryColor"
                    android:src="@drawable/ic_notif"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Notification Settings"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/subheading_label">

                </TextView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/layout_notif_days_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_notif_days_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" days before due date"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_notif_days_before"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="at "/>
                        <TextView
                            android:id="@+id/tv_notif_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:00 pm" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_lost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_lost"
            android:textSize="@dimen/button_label"
            android:background="@color/paleRedColor"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_returned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_returned"
            android:textSize="@dimen/button_label"
            android:background="@color/paleGreenColor"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>