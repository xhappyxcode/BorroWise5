<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ViewHistoryItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:background="@color/accentBlueColor"
        android:layout_marginBottom="10dp"
        android:id="@+id/card_Hview_camera">

        <ImageView
            android:id="@+id/img_Hview_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera_small"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Hview_item_name"
        android:layout_below="@id/card_Hview_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/navigation_icon_size"
            android:layout_height="@dimen/navigation_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:tint="@color/text_primaryColor"
            android:src="@drawable/ic_item"/>

        <TextView
            android:id="@+id/tv_HviewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item name"
            android:textSize="@dimen/subheading_label"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Hview_user_name"
        android:layout_below="@id/layout_Hview_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/navigation_icon_size"
            android:layout_height="@dimen/navigation_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:tint="@color/text_primaryColor"
            android:src="@drawable/ic_account"/>
        <TextView
            android:id="@+id/Hview_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lent_to"/>
        <TextView
            android:id="@+id/tv_HviewPersonName"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="Person name"
            android:textSize="@dimen/subheading_label">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Hview_item_date_details"
        android:layout_below="@id/layout_Hview_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_Hview_item_startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/navigation_icon_size"
                android:layout_height="@dimen/navigation_icon_size"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_calendar"
                android:tint="@color/text_primaryColor"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subheading_label"
                    android:text="@string/lbl_start"/>
                <TextView
                    android:id="@+id/tv_Hview_item_startDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption_label"
                    android:text="today"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:id="@+id/layout_Hview_item_endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/navigation_icon_size"
                android:layout_height="@dimen/navigation_icon_size"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_calendar"
                android:tint="@color/text_primaryColor"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subheading_label"
                    android:text="@string/lbl_due"/>
                <TextView
                    android:id="@+id/tv_Hview_item_endDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption_label"
                    android:text="today"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/dividerColor" />
        <LinearLayout
            android:id="@+id/layout_Hview_item_retDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/navigation_icon_size"
                android:layout_height="@dimen/navigation_icon_size"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_calendar"
                android:tint="@color/text_primaryColor"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subheading_label"
                    android:text="@string/lbl_ret"/>
                <TextView
                    android:id="@+id/tv_Hview_item_retDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption_label"
                    android:text="today"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_Hview_status"
        android:orientation="horizontal"
        android:layout_below="@id/Hview_item_date_details"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_status"
            android:textSize="@dimen/subheading_label"
            android:paddingRight="10dp"/>
        <TextView
            android:id="@+id/tv_Hview_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_status"
            android:textSize="@dimen/subheading_label"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_Hview_status"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_rating"
            android:textSize="@dimen/subheading_label"
            android:paddingRight="10dp"/>
        <RatingBar
            android:id="@+id/rb_Hview_ratingitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:isIndicator="true"
            android:stepSize="0.5"
            android:rating="5"
            android:background="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>
