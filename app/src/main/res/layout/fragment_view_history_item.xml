<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.ViewHistoryItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:background="@color/accentBlueColor"
        android:id="@+id/card_Hview_camera">

        <ImageView
            android:id="@+id/img_Hview_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_Hview_camera">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_Hview_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:tint="@color/text_primaryColor"
                    android:id="@+id/image_icon"
                    android:src="@drawable/ic_account"/>

                <LinearLayout
                    android:layout_toRightOf="@id/image_icon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Hview_item_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/caption_label"
                        android:text="@string/lent_to"/>
                    <TextView
                        android:id="@+id/tv_HviewPersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="Person name"
                        android:textSize="@dimen/subheading_label"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout">

                    <RatingBar
                        android:id="@+id/rb_Hview_ratingitem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:stepSize="0.5"
                        android:rating="5"
                        android:theme="@style/RatingBar"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/layout_Hview_status"
                        android:orientation="horizontal">
                        <!--android:layout_below="@id/Hview_item_date_details">-->
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_info"
                            android:tint="@color/text_primaryColor"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/right_space"/>
                        <TextView
                            android:id="@+id/tv_Hview_item_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lbl_status"
                            android:textSize="@dimen/subheading_label"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/Hview_item_date_details"
                android:layout_below="@id/layout_Hview_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_Hview_item_startDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/navigation_icon_size"
                        android:layout_height="@dimen/navigation_icon_size"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/text_primaryColor"/>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/caption_label"
                            android:text="@string/lbl_start"/>
                        <TextView
                            android:id="@+id/tv_Hview_item_startDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/subheading_label"
                            android:text="Today"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_Hview_item_endDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/navigation_icon_size"
                        android:layout_height="@dimen/navigation_icon_size"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/text_primaryColor"/>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/caption_label"
                            android:text="@string/lbl_due"/>
                        <TextView
                            android:id="@+id/tv_Hview_item_endDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/subheading_label"
                            android:text="Today"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_Hview_item_retDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/navigation_icon_size"
                        android:layout_height="@dimen/navigation_icon_size"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/text_primaryColor"/>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/caption_label"
                            android:text="@string/lbl_ret"/>
                        <TextView
                            android:id="@+id/tv_Hview_item_retDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/subheading_label"
                            android:text="today"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
